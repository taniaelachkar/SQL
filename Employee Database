# Obtain the number of employees whose last name contains more than 5 letters and less than 8
SELECT COUNT(LASTNAME) FROM EMPLOYEE 
WHERE LENGTH(LASTNAME) BETWEEN 6 AND 7;

# Obtain the total salary (salary + commission + bonus) of each employee in the A00 department 
SELECT LASTNAME, SUM(SALARY + BONUS + COMM) FROM EMPLOYEE
WHERE WORKDEPT = 'A00'
GROUP BY LASTNAME;

# What is the total amount of money that the company pays its employees?
SELECT SUM (SALRAY + BONUS + COMM) FROM EMPLOYEE;

# Which employees have the greatest salary? 
SELECT LASTNAME, FIRSTNAME, SALARY FROM EMPLOYEE
WHERE SALARY = (SELECT MAX(SALARY) FROM EMPLOYEE);

# What is the number of distinct departments in this company? 
SELECT COUNT(DISTINCT WORKDEPT) FROM EMPLOYEE;

# What is the average salary of the employees in department A00?
SELECT WORKDEPT, DECIMAL(AVG(SALARY), 10, 2) FROM EMPLOYEE
WHERE WORKDEPT = 'A00' 
GROUP BY WORKDEPT;

# What is the salary of the oldest employees who work as operators?
SELECT LASTNAME, SALARY FROM EMPLOYEE
WHERE JOB = 'OPERATOR' AND BIRTHDATE = (SELECT MIN(BIRTHDATE) FROM EMPLOYEE WHERE JOB = 'OPERATOR');

# What is the age difference between the oldest employee and the youngest?
SELECT MAX(YEAR(BIRTHDATE)) - MIN(YEAR(BIRTHDATE)) AS DIFFERENCE FROM EMPLOYEE

# How many employees have a salary that is at least 10,000 euros greater than the lowest salary?
SELECT COUNT(*) FROM EMPLOYEE
WHERE SALARY >= ((SELECT MIN(SALARY) FROM EMPLOYEE + 10000)

# If a telephone number can be shared by a maximum of 2 employees, how many employees share a telephone number?
SELECT COUNT(PHONENO) FROM EMPLOYEE 
WHERE PHONENO IN (SELECT PHONENO FROM EMPLOYEE GROUP BY PHONENO HAVING COUNT(*)>1 ORDER BY PHONENO)
